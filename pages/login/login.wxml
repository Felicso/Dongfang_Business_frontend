<view id="login">
  <text id="title">DF之铢 商家端</text>
  <form bindsubmit="create_login">

  <view id="t1">
    <text style="font-size:17px; font-weight:500">用户名</text>
    <input type="text" name="username" id="user" placeholder="输入您的账号" value="{{username}}"></input>
  </view>

  <view id="t2">
    <text style="font-size:17px; font-weight:500">密码</text>
    <input type="password" name="password" id="pass1" placeholder="输入您的密码" value="{{password}}"></input>
  </view>

  <button bindtap="goto_index" id="btn1" form-type="submit"><text style="position: relative;">登陆</text></button>
  </form>

  <button bindtap="goto_zhuce" id="btn2">
    <navigator url="/pages/register/register" class="bt_t">注册</navigator>
  </button>
  <button bindtap="goto_update" id="btn3">
    <text class="bt_t">忘记密码</text>
  </button>

</view>


